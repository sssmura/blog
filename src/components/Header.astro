---
const { location } = Astro.props;
---

<header class="bg-[#161b22] border-b border-[#30363d]">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">Engineer's Blog</h1>
    <nav class="flex gap-6">
      <a
        href="/"
        class={`${location === "/" ? "text-[#58a6ff]" : "text-[#8b949e]"} hover:text-[#58a6ff] font-semibold text-sm flex items-center gap-2`}
      >
        <i data-feather="home"></i> Home
      </a>
      <a
        href="/blog"
        class={`${location === "/blog" ? "text-[#58a6ff]" : "text-[#8b949e]"} hover:text-[#58a6ff] font-semibold text-sm flex items-center gap-2`}
      >
        <i data-feather="book-open"></i> Blog
      </a>
      <a
        href="/works"
        class={`${location === "/works" ? "text-[#58a6ff]" : "text-[#8b949e]"} hover:text-[#58a6ff] font-semibold text-sm flex items-center gap-2`}
      >
        <i data-feather="briefcase"></i> Works
      </a>
      <a
        href="https://github.com/yourusername"
        target="_blank"
        class="text-[#8b949e] hover:text-[#58a6ff] font-semibold text-sm flex items-center gap-2"
      >
        <i data-feather="github"></i> GitHub
      </a>
      <a
        href="https://twitter.com/yourusername"
        target="_blank"
        class="text-[#8b949e] hover:text-[#58a6ff] font-semibold text-sm flex items-center gap-2"
      >
        <i data-feather="twitter"></i> X (Twitter)
      </a>
    </nav>
  </div>
</header>
