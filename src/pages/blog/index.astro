---
import fi from "feather-icons";
import PostCard from "../../components/PostCard.astro";
import Layout from "../../layouts/Layout.astro";
let posts = await Astro.glob("../../pages/posts/*.md");
posts = posts.sort((a, b) => {
  return (
    new Date(b.frontmatter.pubDate).getTime() -
    new Date(a.frontmatter.pubDate).getTime()
  );
});
---

<Layout location="/blog">
  <main class="container mx-auto px-6 py-12">
    <h2 class="text-3xl font-bold mb-8 pb-2 border-b border-[#30363d]">
      Blog Posts
    </h2>

    <div class="flex flex-wrap gap-4 mb-8">
      <button
        class="bg-[#21262d] text-[#c9d1d9] px-4 py-2 rounded-md hover:bg-[#30363d] transition-colors"
      >
        All Categories
      </button>
      <button
        class="bg-[#21262d] text-[#c9d1d9] px-4 py-2 rounded-md hover:bg-[#30363d] transition-colors"
      >
        React
      </button>
      <button
        class="bg-[#21262d] text-[#c9d1d9] px-4 py-2 rounded-md hover:bg-[#30363d] transition-colors"
      >
        Python
      </button>
      <button
        class="bg-[#21262d] text-[#c9d1d9] px-4 py-2 rounded-md hover:bg-[#30363d] transition-colors"
      >
        Machine Learning
      </button>
    </div>

    <div class="space-y-8">
      {
        posts.map((post) => (
          <PostCard
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            url={post.url}
            date={post.frontmatter.pubDate}
            tags={post.frontmatter.tags}
          />
        ))
      }
    </div>
  </main>
</Layout>
